{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "allowJs": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "typeRoots": [
            "./node_modules/@types",
            "./src/**/*.d.ts",
        ],
    },
    
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "public",
    ],
}